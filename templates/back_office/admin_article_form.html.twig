{% extends "base_admin.html.twig" %}
{% block title %}
    Back Office | Nouvel article
{% endblock %}

{% block body %}
    <h1 class="text-center">Ajout d'un nouvel article</h1>

    {{ form_start(formArticle)}}

        {{ form_row(formArticle.titre)}}

        {{ form_row(formArticle.category)}}

        {{ form_row(formArticle.contenu)}}

        {{ form_row(formArticle.photo)}}

          {% if photoActuelle %}
        <p>
            <em>Vous pouvez uploader une nouvelle photo si vous souhaitez la modifier</em>
            <img src="{{ asset('uploads/photos/' ~ photoActuelle)}}"  class="col-12 img-responsive">
        </p>

    {% endif %}

        <button>Ajouter</button>
    {{ form_end(formArticle)}}

    

{% endblock %}